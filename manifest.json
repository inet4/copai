{
  "manifest_version": 2,
  "name": "copai",
  "version": "1.0.3",
  "description": "funny cat images!",
  "browser_specific_settings": {
    "gecko": {
      "id": "copai@inet4.github.com",
       "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "256": "icons/256.jpg"
  },
  "permissions": [
    "clipboardRead",
    "https://api.openai.com/v1/responses/*",
    "tabs"
  ],
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://moodle.spengergasse.at/*"
      ],
      "js": [
        "src/copai.js"
      ],
      "all_frames": true
    }
  ]
}
